{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "importHelpers": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@theme/*": [".vitepress/theme/*"]
    },
    "types": ["element-plus/global"]
  },
  "exclude": ["node_modules"],
  "include": ["env.d.ts", "src/**/*", ".vitepress/**/*"]
}
